{
  "name": "depot",
  "version": "1.0.0",
  "description": "",
  "main": "static/index.html",
  "scripts": {
    "stylesync": "cpx \"static/css/**/*\" ../depot-wp/wp-content/themes/depottheme/css --watch",
    "imagesync": "cpx \"static/images/**/*\" ../depot-wp/wp-content/themes/depottheme/images --watch",
    "themesync": "cpx \"depottheme/**/*\" ../depot-wp/wp-content/themes/depottheme --watch",
    "wpsync": "npm-run-all -p themesync stylesync imagesync",
    "browsersync": "browser-sync start -s \"static\" -f \"static/**/*.*\"",
    "browsersync-wp": "browser-sync start --proxy http://localhost:80 -f \"../depot-wp/wp-content/themes/**/*.*\"",
    "sass": "node-sass -w --include-path='static/sass' --source-map=true static/sass/styles.scss static/css/styles.css",
    "start": "npm-run-all -p browsersync sass",
    "start-wp": "npm-run-all -p browsersync-wp wpsync sass",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laneyoder/depot.git"
  },
  "author": "Lane Yoder",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/laneyoder/depot/issues"
  },
  "homepage": "https://github.com/laneyoder/depot#readme",
  "dependencies": {
    "browser-sync": "^2.26.3",
    "cpx": "^1.5.0",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.3"
  }
}
